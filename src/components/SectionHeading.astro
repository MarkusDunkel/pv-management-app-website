---
interface Props {
  id: string;
  label: string;
  eyebrow?: string;
  description?: string;
}

const { id, label, eyebrow, description } = Astro.props as Props;
---
<section id={id} class="scroll-mt-24 space-y-4">
  {eyebrow && (
    <span class="inline-flex items-center rounded-full bg-muted px-3 py-1 text-xs font-semibold uppercase tracking-wide text-muted-foreground">
      {eyebrow}
    </span>
  )}
  <h2 class="text-3xl font-bold tracking-tight sm:text-4xl">{label}</h2>
  {description && <p class="max-w-2xl text-base text-muted-foreground">{description}</p>}
  <slot />
</section>
